<AnchorPane prefHeight="550.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.ProductFormController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Product Details" textFill="#1976d2">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" top="20.0" />
               </VBox.margin>
            </Label>
            <GridPane hgap="10.0" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="294.0" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="451.0" minWidth="10.0" prefWidth="410.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
               <children>
                  <Label text="Product Name *" />
                  <TextField fx:id="nameField" GridPane.columnIndex="1" />
                  <Label text="Description" GridPane.rowIndex="1" />
                  <TextArea fx:id="descriptionArea" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="Category" GridPane.rowIndex="2" />
                  <TextField fx:id="categoryField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label text="Price *" GridPane.rowIndex="3" />
                  <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label text="Cost" GridPane.rowIndex="4" />
                  <TextField fx:id="costField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <Label text="Stock Quantity *" GridPane.rowIndex="5" />
                  <TextField fx:id="stockField" text="0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <Label text="Reorder Level" GridPane.rowIndex="6" />
                  <TextField fx:id="reorderField" text="10" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                  <Label text="Supplier" GridPane.rowIndex="7" />
                  <ComboBox fx:id="supplierCombo" maxWidth="1.7976931348623157E308" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                  <Label text="Barcode" GridPane.rowIndex="8" />
                  <TextField fx:id="barcodeField" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                  <Label text="SKU" GridPane.rowIndex="9" />
                  <TextField fx:id="skuField" GridPane.columnIndex="1" GridPane.rowIndex="9" />
               </children>
            </GridPane>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleCancel" prefWidth="80.0" text="Cancel" />
                  <Button defaultButton="true" mnemonicParsing="false" onAction="#handleSave" prefWidth="80.0" text="Save" />
               </children>
               <padding>
                  <Insets right="20.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
