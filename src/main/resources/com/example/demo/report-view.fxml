<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="600.0" prefWidth="980.0" style="-fx-background-color: #dacef0;" 
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.demo.controller.ReportController">
    <children>
        <!-- Header -->
        <Label alignment="CENTER" prefHeight="52.0" prefWidth="980.0" 
               style="-fx-background-color: #7854ba;" text="SALES REPORTS" textFill="WHITE">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
        
        <!-- Back Button -->
        <Button layoutX="16.0" layoutY="9.0" mnemonicParsing="false" onAction="#goBack" 
                prefHeight="34.0" prefWidth="100.0" style="-fx-font-weight: bold; -fx-background-color: #5a3d8a;" 
                text="â† Back" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
        
        <!-- Main Content -->
        <VBox layoutX="30.0" layoutY="65.0" prefWidth="920.0" spacing="15.0">
            <children>
                <!-- TODAY'S TOTAL - Prominent at the top -->
                <HBox alignment="CENTER" style="-fx-background-color: #4CAF50; -fx-background-radius: 10;" 
                      prefHeight="70.0">
                    <children>
                        <Label fx:id="todayTotalLabel" style="-fx-font-weight: bold;" 
                               text="TODAY'S TOTAL: $0.00" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                </HBox>
                
                <!-- Date Selection Row -->
                <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #ffffff; -fx-background-radius: 5;"
                      prefHeight="50.0">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Select Date:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <DatePicker fx:id="datePicker" prefHeight="35.0" prefWidth="200.0" />
                        <Button mnemonicParsing="false" onAction="#handleGenerate" 
                                prefHeight="35.0" prefWidth="120.0" 
                                style="-fx-background-color: #7854ba; -fx-font-weight: bold;" 
                                text="Generate" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Button>
                        <HBox HBox.hgrow="ALWAYS" />
                        <Label fx:id="totalSalesLabel" style="-fx-font-weight: bold;" text="Total Sales: $0.00">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                    </padding>
                </HBox>
                
                <!-- Info Label -->
                <Label style="-fx-text-fill: #666666;" 
                       text="Showing checkout history from customers. Data loads automatically for today.">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Label>
                
                <!-- Results Table -->
                <TableView fx:id="reportTable" prefHeight="350.0" prefWidth="920.0" 
                           style="-fx-background-radius: 5;">
                    <columns>
                        <TableColumn fx:id="productNameColumn" prefWidth="350.0" text="Product Name" />
                        <TableColumn fx:id="quantityColumn" prefWidth="150.0" text="Quantity Sold" />
                        <TableColumn fx:id="unitPriceColumn" prefWidth="180.0" text="Unit Price ($)" />
                        <TableColumn fx:id="totalColumn" prefWidth="200.0" text="Total ($)" />
                    </columns>
                </TableView>
            </children>
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
