<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="700.0" prefWidth="800.0" style="-fx-background-color: #dacef0;" 
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.demo.controller.SupplierOrderController">
    <children>
        <!-- Header -->
        <Label alignment="CENTER" prefHeight="52.0" prefWidth="800.0" 
               style="-fx-background-color: #7854ba;" text="SUPPLIER ORDER" textFill="WHITE">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
        
        <!-- Back Button -->
        <Button layoutX="16.0" layoutY="9.0" mnemonicParsing="false" onAction="#goBack" 
                prefHeight="34.0" prefWidth="100.0" style="-fx-font-weight: bold; -fx-background-color: #5a3d8a;" 
                text="â† Back" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
        
        <!-- Main Content -->
        <VBox layoutX="50.0" layoutY="65.0" prefWidth="700.0" spacing="15.0">
            <children>
                <Label style="-fx-font-weight: bold;" text="Order products from suppliers to add to stock">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                
                <GridPane hgap="15.0" vgap="10.0">
                    <children>
                        <!-- Supplier Selection -->
                        <Label text="Select Supplier:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="supplierComboBox" prefHeight="35.0" prefWidth="300.0" 
                                  promptText="Choose a supplier..." GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <!-- Product Name -->
                        <Label text="Product Name:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <TextField fx:id="productNameField" prefHeight="35.0" prefWidth="300.0" 
                                   promptText="Enter product name" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <!-- Quantity -->
                        <Label text="Quantity:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <TextField fx:id="quantityField" prefHeight="35.0" prefWidth="300.0" 
                                   promptText="Enter quantity" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        
                        <!-- Price (for new products) -->
                        <Label text="Price (New Product):" GridPane.columnIndex="0" GridPane.rowIndex="3">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <TextField fx:id="priceField" prefHeight="35.0" prefWidth="300.0" 
                                   promptText="Price (only for new products)" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                   
                        <Button mnemonicParsing="false" onAction="#handleAddToList" 
                                prefHeight="35.0" prefWidth="120.0" 
                                style="-fx-background-color: #2196F3; -fx-font-weight: bold;" 
                                text="+ Add to List" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    </children>
                    <columnConstraints>
                        <ColumnConstraints prefWidth="150.0" />
                        <ColumnConstraints prefWidth="350.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>
                
                <!-- Supply Cart Table -->
                <TableView fx:id="tblSupply" prefHeight="250.0" prefWidth="700.0">
                    <columns>
                        <TableColumn fx:id="colProduct" prefWidth="300.0" text="Product Name" />
                        <TableColumn fx:id="colQuantity" prefWidth="150.0" text="Quantity" />
                        <TableColumn fx:id="colPrice" prefWidth="250.0" text="Price (New)" />
                    </columns>
                </TableView>
                
                <!-- Place Order Button -->
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handlePlaceOrder" 
                                prefHeight="45.0" prefWidth="250.0" 
                                style="-fx-background-color: #4CAF50; -fx-font-weight: bold;" 
                                text="Process All Supply Tasks" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleClearList"
                                prefHeight="45.0" prefWidth="150.0"
                                style="-fx-background-color: #f44336; -fx-font-weight: bold;"
                                text="Clear List" textFill="WHITE" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
