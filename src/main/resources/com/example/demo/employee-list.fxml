<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.EmployeeController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: #e0e0e0;">
               <children>
                  <Label text="Employee Management">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
                  <HBox HBox.hgrow="ALWAYS" />
                  <TextField fx:id="searchField" onAction="#handleSearch" promptText="Search employees..." />
                  <Button mnemonicParsing="false" onAction="#handleSearch" text="Search" />
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </HBox>
            <ToolBar prefHeight="40.0" prefWidth="200.0">
              <items>
                <Button mnemonicParsing="false" onAction="#handleAdd" text="Add Employee" />
                  <Button mnemonicParsing="false" onAction="#handleEdit" text="Edit Selected" />
                  <Button mnemonicParsing="false" onAction="#handleDelete" text="Delete Selected" />
                  <Button mnemonicParsing="false" onAction="#handlePromote" text="Promote" />
                  <Button mnemonicParsing="false" onAction="#handleDemote" text="Demote" />
              </items>
            </ToolBar>
            <TableView fx:id="employeeTable" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="firstNameColumn" prefWidth="120.0" text="First Name" />
                  <TableColumn fx:id="lastNameColumn" prefWidth="120.0" text="Last Name" />
                  <TableColumn fx:id="emailColumn" prefWidth="180.0" text="Email" />
                  <TableColumn fx:id="deptColumn" prefWidth="150.0" text="Department" />
                  <TableColumn fx:id="positionColumn" prefWidth="120.0" text="Position" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
